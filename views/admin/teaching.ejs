    .then(data => {
        console.log("data", data)
        if (data.message) {
            alert('Updated successfully!');
        } else {
            alert('Failed to update.');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error updating the data.');
    });
        });
</script>

</body>
</html>